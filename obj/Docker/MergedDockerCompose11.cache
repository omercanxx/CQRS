networks:
  postgres:
    driver: bridge
services:
  cqrs.api:
    build:
      context: C:\Users\omer.sucu\Documents\GitHub\CQRS
      dockerfile: CQRS.API/Dockerfile
    depends_on:
      postgres:
        condition: service_started
      rabbitmq:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_URLS: https://+:443;http://+:80
    image: cqrsapi
    networks:
      postgres: {}
    ports:
    - published: 8080
      target: 80
    - target: 80
    - published: 8001
      target: 443
    - target: 443
    volumes:
    - C:\Users\omer.sucu\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\omer.sucu\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
  mongodb_container:
    container_name: mongo_container
    image: mongo:latest
    ports:
    - published: 27017
      target: 27017
    volumes:
    - mongodb_data_container:/data/db:rw
  pgadmin:
    container_name: pgadmin_container
    environment:
      PGADMIN_CONFIG_SERVER_MODE: "False"
      PGADMIN_DEFAULT_EMAIL: admin@padmin.net
      PGADMIN_DEFAULT_PASSWORD: admin
    image: dpage/pgadmin4
    networks:
      postgres: {}
    ports:
    - published: 5050
      target: 80
    restart: unless-stopped
    volumes:
    - pgadmin:/var/lib/pgadmin:rw
  postgres:
    container_name: postgres_container
    environment:
      PGDATA: /data/postgres
      POSTGRES_PASSWORD: admin
      POSTGRES_USER: postgres
    image: postgres
    networks:
      postgres: {}
    ports:
    - published: 5432
      target: 5432
    restart: unless-stopped
    volumes:
    - postgres:/data/postgres:rw
  rabbitmq:
    container_name: rabbitmq
    environment:
      RABBITMQ_DEFAULT_PASS: '123456'
      RABBITMQ_DEFAULT_USER: admin
    image: rabbitmq:3-management
    ports:
    - published: 5672
      target: 5672
    - published: 15672
      target: 15672
version: '3.4'
volumes:
  mongodb_data_container: {}
  pgadmin: {}
  postgres: {}